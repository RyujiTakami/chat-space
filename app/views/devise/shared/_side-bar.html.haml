- if user_signed_in?
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box--user-name
          = current_user.name
        %ul.side-header__box--icon
          = link_to new_group_path do
            = fa_icon "edit", class: "icon"
          = link_to edit_user_path(current_user) do
            = fa_icon "cog", class: "icon"
    .groups
      = render "groups/group"
