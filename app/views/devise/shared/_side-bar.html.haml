- if user_signed_in?
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box--user-name
          = current_user.name
        %ul.side-header__box--icon
          = link_to new_group_path do
            = fa_icon "edit", class: "icon"
          = link_to edit_user_path(current_user) do
            = fa_icon "cog", class: "icon"
    .groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group.id) do
          .group__box
            %p.group__box--name= group.name
            %p.group__box--message
              = group.show_last_message
