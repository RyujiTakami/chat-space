.message__box
  .message__box--user-name
    = message.user.name
    %span.message__box--user-name-date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__box--message
    - if message.content.present?
      .message__box--message-content
        = message.content
      = image_tag message.image.url, class: "message__box--message-image" if message.image.present?
